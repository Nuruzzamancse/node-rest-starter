{
  "name": "node-rest-starter",
  "description": "A boilerplate for creating RESTful APIs in Node.js using Express and MongoDB.",
  "version": "0.6.0",
  "author": "Sk Arif <skarif2@gmail.com>",
  "license": "MIT",
  "repository": "github:skarif2/node-rest-starter",
  "homepage": "https://github.com/skarif2/node-rest-starter#readme",
  "keywords": [
    "node"
  ],
  "engines": {
    "node": ">=10.3.0",
    "npm": ">=6.1.0"
  },
  "dependencies": {
    "@skarif2/logger": "^0.3.0",
    "bcryptjs": "2.4.3",
    "bluebird": "3.5.3",
    "compression": "1.7.3",
    "consola": "2.5.6",
    "cors": "2.8.5",
    "debug": "4.1.1",
    "dotenv": "6.2.0",
    "express": "4.16.4",
    "express-jwt": "5.3.1",
    "express-validation": "^1.0.2",
    "fastest-validator": "0.6.16",
    "helmet": "3.15.1",
    "http-status": "1.3.1",
    "joi": "14.3.1",
    "jsonwebtoken": "8.5.0",
    "lodash": "4.17.11",
    "method-override": "3.0.0",
    "mongoose": "5.4.16",
    "progress": "^2.0.3"
  },
  "devDependencies": {
    "apidoc": "0.17.7",
    "coveralls": "3.0.3",
    "eslint": "5.15.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jest": "22.3.0",
    "eslint-plugin-node": "8.0.1",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-standard": "4.0.0",
    "husky": "^0.14.3",
    "jest": "24.1.0",
    "nodemon": "1.18.10",
    "supertest": "3.4.2"
  },
  "scripts": {
    "start": "node ./src/index.js",
    "start:watch": "nodemon ./src/index.js",
    "start:debug": "node ./src/index.js",
    "lint": "eslint --ext=.js src || true",
    "test": "APP_ENV=test MONGO_HOST=mongodb://localhost/nrs-test jest",
    "test:watch": "APP_ENV=test MONGO_HOST=mongodb://localhost/nrs-test jest --watch",
    "test:coverage": "APP_ENV=test MONGO_HOST=mongodb://localhost/nrs-test jest --coverage",
    "precommit": "eslint --ext=.js src && npm run test",
    "apidoc": "apidoc -i ./src -f .route.js -o ./docs"
  },
  "apidoc": {
    "title": "Node Rest Starter",
    "url": "https://localhost"
  }
}
